<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recyclerviewPink"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:background="@drawable/shadow_background_pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pinkSongNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/pinkSongImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/songlist_background_square"
            android:src="@drawable/albumcover"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/pinkSongNumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/pinkSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantra"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/pinkSongImage"
            app:layout_constraintTop_toTopOf="@id/pinkSongImage"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/pinkSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jennie"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/pinkSongName"
            app:layout_constraintTop_toBottomOf="@id/pinkSongName"
            app:layout_constraintBottom_toBottomOf="@id/pinkSongImage"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recyclerviewBlue"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:background="@drawable/shadow_background_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerviewPink"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/blueSongNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/blueSongImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/albumcover"
            android:scaleType="centerCrop"
            android:background="@drawable/songlist_background_square"
            app:layout_constraintStart_toEndOf="@id/blueSongNumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/blueSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantra"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/blueSongImage"
            app:layout_constraintTop_toTopOf="@id/blueSongImage"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/blueSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jennie"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/blueSongName"
            app:layout_constraintTop_toBottomOf="@id/blueSongName"
            app:layout_constraintBottom_toBottomOf="@id/blueSongImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>