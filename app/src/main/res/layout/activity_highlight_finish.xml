<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HighlightFinish">

    <TextView
        android:id="@+id/highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="highlight"
        android:textSize="22dp"
        android:textColor="@color/lightPink"
        android:fontFamily="@font/inter_18pt_bold"
        app:layout_constraintTop_toTopOf="@id/vector"
        app:layout_constraintBottom_toBottomOf="@id/vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/vector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"/>

    <Button
        android:id="@+id/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp" />
    
    <ImageView
        android:id="@+id/albumImage"
        android:layout_width="260dp"
        android:layout_height="340dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/highlight"
        android:layout_marginTop="90dp"
        android:background="@drawable/albumcover"/>
    
    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantra"
        android:textSize="25dp"
        android:fontFamily="@font/inter_18pt_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/albumImage"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jennie"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songName"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/tryagainButton"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:text="Try Again"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:fontFamily="@font/inter_18pt_semibold"
        android:gravity="center"
        android:background="@drawable/button_round_radius"
        android:backgroundTint="@color/lightPink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artist"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/othersongsButton"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:text="Other Songs"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:fontFamily="@font/inter_18pt_semibold"
        android:gravity="center"
        android:background="@drawable/button_round_radius"
        android:backgroundTint="@color/lightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tryagainButton"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/quitButton"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:text="Quit"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:fontFamily="@font/inter_18pt_semibold"
        android:gravity="center"
        android:background="@drawable/button_round_radius"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/othersongsButton"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>